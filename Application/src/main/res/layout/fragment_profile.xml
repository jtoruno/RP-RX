<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:fillViewport="true"
             android:background="@color/grayBackgground"
             tools:context=".ui.fragments.ProfileFragment">

    <LinearLayout
            android:background="@color/grayBackgground"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:textSize="12sp"
                  android:textStyle="bold"
                  android:layout_marginBottom="10dp"
                  android:layout_marginTop="10dp"
                  android:layout_marginStart="10dp"
                  android:text="Perfil"/>
        <LinearLayout
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:src="@drawable/cutmypic"
                        android:layout_width="70dp"
                        android:layout_height="70dp" android:id="@+id/imageView2"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:text="!Bienvenido Usuario Invitado!"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView54" app:layout_constraintStart_toEndOf="@+id/imageView2"
                        android:layout_marginStart="8dp" android:layout_marginTop="16dp"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"/>
                <ImageView
                        android:src="@drawable/ic_right_gray_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/imageView3"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"/>
                <ImageView
                        android:tint="@color/colorAccent"
                        android:src="@drawable/ic_warning_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/imageView9"
                        app:layout_constraintStart_toEndOf="@+id/imageView2"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView54"/>
                <TextView
                        android:textColor="@android:color/black"
                        android:text="Verificación pendiente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView56" app:layout_constraintStart_toEndOf="@+id/imageView9"
                        android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView54"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:textSize="12sp"
                  android:textStyle="bold"
                  android:layout_marginBottom="10dp"
                  android:layout_marginTop="10dp"
                  android:layout_marginStart="10dp"
                  android:text="Progreso"/>
        <LinearLayout
                android:background="@android:color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:text="Progreso en tu perfil (1 de 5)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView58" android:layout_marginTop="20dp"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"/>
                <TextView
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:text="Siguiente paso: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView59"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" android:layout_marginTop="4dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView58"/>
                <TextView
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="Verificar Identidad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView60"
                        app:layout_constraintStart_toEndOf="@+id/textView59"
                        android:layout_marginStart="0dp" android:layout_marginTop="4dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView58"/>
                <ImageView
                        android:src="@drawable/ic_right_gray_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView13"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
                <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="25dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="40dp"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintTop_toBottomOf="@+id/textView60" android:layout_marginBottom="20dp"
                        app:layout_constraintBottom_toBottomOf="parent">

                    <View
                            android:layout_marginEnd="5dp"
                            android:background="@color/colorAccent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/view3" android:layout_weight="1"/>
                    <View
                            android:layout_marginEnd="5dp"
                            android:background="@color/navDisableColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/view4" android:layout_weight="1"/>
                    <View
                            android:layout_marginEnd="5dp"
                            android:background="@color/navDisableColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/view5" android:layout_weight="1"/>
                    <View
                            android:layout_marginEnd="5dp"
                            android:background="@color/navDisableColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/view6" android:layout_weight="1"/>
                    <View
                            android:layout_marginEnd="5dp"
                            android:background="@color/navDisableColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/view7" android:layout_weight="1"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:textSize="12sp"
                  android:layout_marginBottom="10dp"
                  android:textStyle="bold"
                  android:layout_marginTop="10dp"
                  android:layout_marginStart="10dp"
                  android:text="Información"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_marginTop="5dp"
                      android:id="@+id/home_about_us"
                      android:orientation="horizontal"
                      android:background="@android:color/white"
                      android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                               android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:layout_marginTop="15dp"
                          app:layout_constraintStart_toStartOf="parent"
                          app:layout_constraintTop_toTopOf="parent"
                          app:layout_constraintBottom_toBottomOf="parent"
                          android:textColor="@android:color/black"
                          android:layout_marginBottom="15dp"
                          android:layout_marginStart="10dp"
                          android:text="Sobre Zimplifica"
                          android:textSize="16sp"
                          android:layout_height="wrap_content"/>
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="fill_parent"
                           android:layout_marginEnd="8dp"
                           android:src="@drawable/ic_right_gray_arrow"
                           app:layout_constraintBottom_toBottomOf="parent"
                           app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <View
                android:layout_width="10dp"
                android:layout_height="1dp"
                android:background="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:background="@android:color/white"
                      android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                               android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:layout_marginTop="15dp"
                          app:layout_constraintStart_toStartOf="parent"
                          app:layout_constraintTop_toTopOf="parent"
                          app:layout_constraintBottom_toBottomOf="parent"
                          android:layout_marginBottom="15dp"
                          android:textSize="16sp"
                          android:textColor="@android:color/black"
                          android:layout_marginStart="10dp"
                          android:text="Recomendar a un amigo"
                          android:layout_height="wrap_content"/>
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="fill_parent"
                           android:layout_marginEnd="8dp"
                           android:src="@drawable/ic_right_gray_arrow"
                           app:layout_constraintBottom_toBottomOf="parent"
                           app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <View
                android:layout_width="10dp"
                android:layout_height="1dp"
                android:background="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout android:layout_width="match_parent"
                      android:id="@+id/home_terms_and_conditions"
                      android:orientation="horizontal"
                      android:background="@android:color/white"
                      android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                               android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:layout_marginTop="15dp"
                          android:textSize="16sp"
                          app:layout_constraintStart_toStartOf="parent"
                          app:layout_constraintTop_toTopOf="parent"
                          app:layout_constraintBottom_toBottomOf="parent"
                          android:textColor="@android:color/black"
                          android:layout_marginBottom="15dp"
                          android:layout_marginStart="10dp"
                          android:text="Términos y Condiciones"
                          android:layout_height="wrap_content"/>
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="fill_parent"
                           android:layout_marginEnd="8dp"
                           android:src="@drawable/ic_right_gray_arrow"
                           app:layout_constraintBottom_toBottomOf="parent"
                           app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <View
                android:layout_width="10dp"
                android:layout_height="1dp"
                android:background="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout android:layout_width="match_parent"
                      android:id="@+id/home_privacy"
                      android:orientation="horizontal"
                      android:background="@android:color/white"
                      android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                               android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:layout_marginTop="15dp"
                          android:textSize="16sp"
                          app:layout_constraintStart_toStartOf="parent"
                          app:layout_constraintTop_toTopOf="parent"
                          app:layout_constraintBottom_toBottomOf="parent"
                          android:textColor="@android:color/black"
                          android:layout_marginBottom="15dp"
                          android:layout_marginStart="10dp"
                          android:text="Políticas de Privacidad"
                          android:layout_height="wrap_content"/>
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="fill_parent"
                           android:layout_marginEnd="8dp"
                           android:src="@drawable/ic_right_gray_arrow"
                           app:layout_constraintBottom_toBottomOf="parent"
                           app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:textSize="12sp"
                  android:layout_marginBottom="10dp"
                  android:layout_marginTop="10dp"
                  android:textStyle="bold"
                  android:layout_marginStart="10dp"
                  android:text="Cerrar Sesión"/>
        <LinearLayout android:layout_width="match_parent"
                      android:id="@+id/home_log_out"
                      android:orientation="horizontal"
                      android:background="@android:color/white"
                      android:layout_height="wrap_content" android:layout_marginTop="5dp">
            <TextView android:layout_width="match_parent"
                      android:layout_marginTop="15dp"
                      android:textColor="@color/red"
                      android:textSize="16sp"
                      android:layout_marginBottom="15dp"
                      android:textAlignment="center"
                      android:text="Cerrar Sesión"
                      android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>