<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/colorPrimary"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activities.AccountInfoActivity">

    <com.google.android.material.textfield.TextInputLayout
            android:textColorHint="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:id="@+id/textInputLayout15">

        <com.google.android.material.textfield.TextInputEditText
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:id="@+id/account_info_name"
                android:focusable="false"
                android:enabled="false"
                android:text="Nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
            android:textColorHint="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout15" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:id="@+id/textInputLayout16">

        <com.google.android.material.textfield.TextInputEditText
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:id="@+id/account_info_last_name"
                android:focusable="false"
                android:enabled="false"
                android:text="Apelido1 Apellido2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Apellidos"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
            android:textColorHint="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout16" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:id="@+id/textInputLayout17">

        <com.google.android.material.textfield.TextInputEditText
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:id="@+id/account_info_id_card"
                android:focusable="false"
                android:text="123456789"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Identificación"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
            android:textColorHint="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout17" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:id="@+id/textInputLayout20">

        <com.google.android.material.textfield.TextInputEditText
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:focusable="false"
                android:id="@+id/account_info_date"
                android:text="01/01/2001"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fecha de Nacimiento"/>
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
            android:id="@+id/account_info_ll"
            android:orientation="horizontal"
            android:layout_marginStart="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout20" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp">
        <com.google.android.material.textfield.TextInputLayout
                android:textColorHint="@android:color/white"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:text="example@email.com"
                    android:id="@+id/account_info_email"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Correo Electrónico"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
                android:text="Verificado"
                android:textColor="@android:color/holo_green_light"
                android:textAlignment="center"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/account_info_state"/>
    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/account_info_ll" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>