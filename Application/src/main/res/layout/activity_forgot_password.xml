<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="match_parent"
        tools:context=".ui.activities.ForgotPasswordActivity">

    <TextView
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@color/colorAccent"
            android:text="Ingrese su número de teléfono o correo electrónico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView12" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"/>
    <EditText
            android:textAlignment="center"
            android:background="@drawable/code_input_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/forgot_username" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView12" android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="30dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar4" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/forgot_username" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:background="@drawable/btn_state"
            android:enabled="false"
            android:text="Siguiente"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/forgot_next_btn" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/progressBar4" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp" app:layout_constraintHorizontal_bias="0.498"/>
</android.support.constraint.ConstraintLayout>