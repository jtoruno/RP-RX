<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="match_parent"
        tools:context=".ui.activities.CompletePaymentActivity">

    <Button
            android:textAllCaps="false"
            android:textSize="16sp"
            android:background="@color/colorAccent"
            android:text="Continuar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/complete_payment_btn" android:layout_marginBottom="0dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="0dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="0dp"/>
    <ImageView
            android:layout_width="232dp"
            android:layout_height="246dp" app:srcCompat="@drawable/wallet"
            android:id="@+id/imageView5" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView22"/>
    <TextView
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:text="Para poder realizar pagos y redimir puntos, debe registrar sus tarjetas de crédito favoritas en RediPuntos."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView20" android:layout_marginBottom="124dp"
            app:layout_constraintBottom_toTopOf="@+id/complete_payment_btn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Agregar un método de pago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView22" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toTopOf="@+id/textView20"/>
</androidx.constraintlayout.widget.ConstraintLayout>