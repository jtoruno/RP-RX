<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.airbnb.lottie.LottieAnimationView
            app:layout_marginLeftPercent="10%"
            app:layout_marginRightPercent="10%"
            app:layout_heightPercent="60%"
            android:id="@+id/lottie_animation"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            app:lottie_rawRes="@raw/confetti"
            app:lottie_autoPlay="true"
            app:lottie_loop="true" android:layout_marginTop="10dp" android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"/>

    <TextView
            android:text="Example"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_below="@id/lottie_animation"
            android:layout_width="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_height="wrap_content" android:id="@+id/headerTxtView" android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

    <TextView android:layout_width="match_parent"
              android:textSize="16sp"
              android:textColor="@android:color/white"
              android:layout_marginTop="20dp"
              android:textAlignment="center"
              android:id="@+id/descriptionTxt"
              android:layout_height="wrap_content"
              android:layout_below="@id/headerTxtView"
              android:layout_alignParentStart="true" android:layout_marginStart="10dp"
              android:layout_alignParentEnd="true" android:layout_marginEnd="10dp"/>


</android.support.percent.PercentRelativeLayout>