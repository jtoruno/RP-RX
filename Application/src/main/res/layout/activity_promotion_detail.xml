<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        android:background="@color/colorPrimary"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".ui.activities.PromotionDetailActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_width="match_parent"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/no_image"
                android:id="@+id/imageView8"/>
        <TextView
                android:text="Title"
                android:layout_marginStart="4dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView37"/>

        <View
                android:layout_width="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@color/navDisableColor"
                android:layout_height="1dp"/>
        <TextView
                android:textSize="22sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:text="Descripción"
                android:layout_marginStart="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView40"/>
        <View
                android:layout_width="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@color/navDisableColor"
                android:layout_height="1dp"/>
        <TextView
                android:layout_marginStart="4dp"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:text="Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView44"/>
        <TextView
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_marginStart="4dp"
                android:textColor="@android:color/white"
                android:layout_marginTop="20dp"
                android:text="Validez"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView45"/>
        <View
                android:layout_width="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@color/navDisableColor"
                android:layout_height="1dp"/>
        <TextView
                android:layout_marginTop="4dp"
                android:layout_marginStart="4dp"
                android:text="TextView"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView46"/>
        <TextView
                android:layout_marginTop="6dp"
                android:layout_marginStart="4dp"
                android:textSize="16sp"
                android:text="TextView"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView48"/>
        <TextView
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginStart="4dp"
                android:text="Localización"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView50"/>

    </LinearLayout>
</ScrollView>