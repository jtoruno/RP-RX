<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:foreground="?android:attr/selectableItemBackground"
              android:clickable="true"
              android:orientation="vertical"
              android:layout_marginTop="5dp"
              android:layout_marginStart="5dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:focusable="true">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">
        <TextView
                android:textColor="@color/grayIconTint"
                android:text="Lunes"
                android:layout_marginStart="5dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/schedule_row_date" android:layout_weight="0.4"/>
        <TextView
                android:textColor="@color/grayIconTint"
                android:text="8:00"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/schedule_row_hour1" android:layout_weight="0.2"/>
        <TextView
                android:textColor="@color/grayIconTint"
                android:text="HASTA"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/schedule_row_until" android:layout_weight="0.2"/>
        <TextView
                android:textColor="@color/grayIconTint"
                android:text="17:00"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/schedule_row_hour2" android:layout_weight="0.2"/>

    </LinearLayout>
    <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:background="@color/grayIconTint"
            android:layout_height="1dp"/>



</LinearLayout>
