<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.journeyapps.barcodescanner.BarcodeView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/zxing_barcode_surface"
            app:zxing_framing_rect_width="450dp"
            app:zxing_framing_rect_height="250dp"/>

    <com.journeyapps.barcodescanner.ViewfinderView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/zxing_viewfinder_view"
            app:zxing_possible_result_points="@color/zxing_custom_possible_result_points"
            app:zxing_result_view="@color/zxing_custom_result_view"
            app:zxing_viewfinder_laser="@color/zxing_custom_viewfinder_laser"
            app:zxing_viewfinder_mask="@color/zxing_custom_viewfinder_mask"/>

    <TextView
            android:textSize="15sp"
            android:id="@+id/zxing_status_view"
            android:layout_width="match_parent"
            android:paddingTop="13dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@color/zxing_transparent"
            android:text="@string/barcodeinfo"
            android:textColor="@color/zxing_status_text" />
    <TextView
            android:textSize="15sp"
            android:text="Â©Scantica"
            android:layout_marginStart="10dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:textColor="@color/zxing_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView17"/>
    <ImageView
            android:layout_marginEnd="15dp"
            android:layout_width="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_highlight_black_24dp"
            android:id="@+id/torch_bar_code"/>

</merge>